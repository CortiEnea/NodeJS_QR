<div class="row">
    <div class="col">
        <h3>Login</h3>
        <form method="POST" action="/login">
            <div class="mb-3">
                <input class="form-control" type="text" name="username" id="username" placeholder="Your Name">
            </div>
            <div class="mb-3">
                <input class="form-control" type="password" name="password" placeholder="Your Password">
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" name="remember" id="remember-check">
                <label class="form-check-label" for="remember-check">Remember me</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
                <div class="alert alert-danger" role="alert">
                  <a href="/signup">Non hai un account? Clicca qui!</a>
                </div>
    </div>
</div>
