<link href="/css/styles.css" rel="stylesheet">

<div class="min-h-screen bg-gradient-to-br from-violet-500 to-fuchsia-500 p-8">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-4xl font-bold text-white mb-12 text-center">I Tuoi QR Code</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {{#each qrcodes}}
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 hover:bg-white/20 transition-all duration-300">
                <div class="flex flex-col items-center space-y-4">
                    <h2 class="text-2xl font-semibold text-white">{{this.name}}</h2>

                    <div class="bg-white p-4 rounded-xl w-48 h-48">
                        <img src="{{this.qrCode}}" alt="QR Code" class="w-full h-full object-contain">
                    </div>

                    <div class="w-full space-y-3">
                        <div class="bg-white/5 rounded-lg p-3">
                            <p class="text-white/80">
                                <strong>URL:</strong>
                                <a href="{{this.link}}" class="hover:text-white truncate block" target="_blank">
                                    {{this.link}}
                                </a>
                            </p>
                        </div>

                        <div class="bg-white/5 rounded-lg p-3">
                            <p class="text-white/80">
                                <strong>Colore QR:</strong>
                                <span class="inline-block w-4 h-4 rounded-full ml-2" style="background-color: {{this.color}}"></span>
                            </p>
                        </div>

                        <div class="bg-white/5 rounded-lg p-3">
                            <p class="text-white/80">
                                <strong>Sfondo:</strong>
                                <span class="inline-block w-4 h-4 rounded-full ml-2" style="background-color: {{this.back}}"></span>
                            </p>
                        </div>
                    </div>

                    <div class="flex w-full gap-2">
                        <a href="{{this.link}}" 
                           target="_blank"
                           class="px-6 py-2 bg-white/20 hover:bg-white/30 text-white rounded-full font-medium transition-colors duration-200 flex-1 text-center">
                            Apri Link
                        </a>
                        <form action="/QR/delete/{{this._id}}" 
                              method="POST" 
                              class="inline"
                              onsubmit="console.log('Form sottomesso con ID:', '{{this._id}}'); return confirm('Sei sicuro di voler eliminare questo QR code?');">
                            <button type="submit"
                                    class="px-6 py-2 bg-red-500/50 hover:bg-red-500/70 text-white rounded-full font-medium transition-colors duration-200">
                                Elimina
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
