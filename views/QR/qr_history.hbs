<div class="min-h-screen bg-gradient-to-br from-purple-500 to-pink-500 p-8">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-4xl font-bold text-white mb-12 text-center">I Tuoi QR Code</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {{#each qrcodes}}
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-6 hover:bg-white/20 transition-all duration-300">
                <div class="flex flex-col space-y-4">
                    <h2 class="text-2xl font-semibold text-white text-center">{{this.name}}</h2>
                    
                    <div class="flex flex-col md:flex-row gap-6 items-center">
                        <div class="bg-white p-4 rounded-xl w-full md:w-1/2">
                            <img src="{{this.qrCode}}" alt="QR Code" class="w-full aspect-square object-contain">
                        </div>
                        
                        <div class="w-full md:w-1/2 space-y-3">
                            <div class="bg-white/5 rounded-lg p-3">
                                <p class="text-white/80"><strong>URL:</strong> 
                                    <a href="{{this.link}}" class="hover:text-white truncate block" target="_blank">
                                        {{this.link}}
                                    </a>
                                </p>
                            </div>
                            
                            <div class="bg-white/5 rounded-lg p-3">
                                <p class="text-white/80">
                                    <strong>Colore QR:</strong> 
                                    <span class="inline-block w-4 h-4 rounded-full ml-2" style="background-color: {{this.color}}"></span>
                                </p>
                            </div>
                            
                            <div class="bg-white/5 rounded-lg p-3">
                                <p class="text-white/80">
                                    <strong>Sfondo:</strong>
                                    <span class="inline-block w-4 h-4 rounded-full ml-2" style="background-color: {{this.back}}"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <a href="{{this.link}}" 
                       target="_blank"
                       class="px-6 py-2 bg-white/20 hover:bg-white/30 text-white rounded-full font-medium transition-colors duration-200 text-center">
                        Apri Link
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

